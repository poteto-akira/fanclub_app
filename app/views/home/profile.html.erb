
  <% if @user.name %>
    <!-- アカウント登録時のユーザー名 -->
    <h2 class="title"><%= @user.name %></h2>
  <% else %>
    <!-- twitterのアカウント名 -->
    <h2 class="title"><%= @user.username %></h2>
  <% end %>

  <div class="profile-image">
    <% if @user.image_name %>
    <img src="<%= "/user_images/#{@user.id}.jpg" %>">
     <% else %>
     <img src="/user_images/default_image.jpg">
    <% end %>
  </div>

<!-- ここからユーザーが作ったファンクラブを表示するエリア =================================-->

  <div class="my-fc">
    <h3 class="who-make-fc"><%= @user.name %>さんが作ったファンクラブ</h3>
    <% @user.posts.each do |post|%>
      <% if post.fc_name == "芋あきらの部屋" %>
        <%= link_to ("/#{post.id}/show_fc") do %>
          <section class="card">
            <div class="card-img-parent">
              <img class="card-img" src="<%= "/post_images/poteto_akira.png" %>" alt="">
            </div>
            <div class="card-title">
              <%= link_to("芋あきらの部屋", "/#{post.id}/show_fc") %>
            </div>
          </section>
        <% end %>
      <% else %>
        <%= link_to ("/#{post.id}/show_fc") do %>
          <section class="card">
            <div class="card-img-parent">
              <img class="card-img" src="<%= "/post_images/#{post.id}.jpg" %>" alt="">
            </div>
            <div class="card-title">
              <%= link_to(post.fc_name, "/#{post.id}/show_fc") %>
            </div>
          </section>
        <% end %>
      <% end %>
    <% end %>
  </div>
<!-- ここまでユーザーが作ったファンクラブを表示するエリア =================================-->

<div class="header-bottom">
  <nav>
    <ul>
      <li>
        <%= link_to ("/") do %>
          <%= image_tag 'home_aicon.png', :size =>'30x30'%>
        <% end %>
      </li>
      <li>
        <% if user_signed_in? %>
          <%= link_to ("/#{current_user.id}/setting") do %>
            <%= image_tag 'setting_aicon.png', :size =>'30x30'%>
          <% end %>
        <% else %>
          <%= link_to ("/users/sign_in") do %>
            <%= image_tag 'setting_aicon.png', :size =>'30x30'%>
          <% end %>
        <% end %>
      </li>
    </ul>
  </nav>
</div>
