<div class="main">
  <h3 class="title">ファンクラブを編集する</h3>
  <%= form_tag("/#{@post.id}/update_fc", {multipart: true}) do %>
    <input class="btn btn-color-blue btn-size-large" type="submit" value="これで完成！">
    <% @post.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
      <h4 class="about-fc">ファンクラブのヘッダー画像(必須)</h4>
      <!-- fileボタンは装飾が難しいからここは後回し -->
      <input name="post_image" type="file">
      <h4 class="about-fc">ファンクラブ名(必須)</h4>
      <textarea name="fc_name" class="textbox-short"><%= @post.fc_name %></textarea>
      <h4 class="about-fc">ファンクラブの説明(必須)</h4>
      <textarea name="content" class="textbox"><%= @post.content %></textarea>

  <% end %>
</div>

<div class="header-bottom">
  <nav>
    <ul>
      <li>
        <%= link_to ("/") do %>
          <%= image_tag 'home_aicon.png', :size =>'30x30'%>
        <% end %>
      </li>
      <li>
        <%= link_to ("#{current_user.id}/setting") do %>
          <%= image_tag 'setting_aicon.png', :size =>'30x30'%>
        <% end %>
      </li>
    </ul>
  </nav>
</div>
